{
  "name": "ircv3",
  "description": "Connect to and interact with IRC servers. IRCv3 compatible.",
  "version": "0.26.3",
  "main": "lib",
  "types": "lib",
  "exports": {
    ".": {
      "require": "./lib/index.js",
      "import": "./es/index.mjs"
    }
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/d-fischer/ircv3.git"
  },
  "author": "Daniel Fischer <daniel@d-fischer.dev>",
  "funding": "https://github.com/sponsors/d-fischer",
  "license": "MIT",
  "files": [
    "LICENSE",
    "README.md",
    "lib",
    "es",
    "!**/__tests__"
  ],
  "scripts": {
    "lint": "eslint --ext js,ts src",
    "prettier:check": "prettier --check 'src/**'",
    "prettier:fix": "prettier --write 'src/**'",
    "test": "jest",
    "build": "tsukuru",
    "rebuild": "tsukuru --clean"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts,css,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{js,ts}": [
      "eslint --fix",
      "git add"
    ]
  },
  "devDependencies": {
    "@d-fischer/eslint-config": "^2.0.6",
    "@types/jest": "^26.0.14",
    "eslint": "^7.10.0",
    "husky": "^4.3.0",
    "jest": "^26.4.2",
    "jest-environment-node": "^26.3.0",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "ts-jest": "^26.4.1",
    "tsukuru": "^0.5.0",
    "typescript": "~4.0.3"
  },
  "dependencies": {
    "@d-fischer/connection": "^6.2.0",
    "@d-fischer/escape-string-regexp": "^5.0.0",
    "@d-fischer/logger": "^2.1.0",
    "@d-fischer/shared-utils": "^2.4.0",
    "@d-fischer/typed-event-emitter": "^3.1.0",
    "@types/node": "^14.11.2",
    "klona": "^2.0.4",
    "tslib": "^2.0.1"
  }
}
